@model Alumno.Models.ViewModels.TablaViewModel
@{
	ViewBag.Title = "Nuevo";
}

<h2>Editar registro</h2>

@using (Html.BeginForm("Editar", "Tabla", FormMethod.Post))
{
	<div class="row">
		<div class="col-md-12">
			@Html.HiddenFor(d=>d.Id)
			<div>
				@Html.LabelFor(d => d.NombreAlumno)
				@Html.TextBoxFor(d => d.NombreAlumno, "", new { @class = "form-control" })
				@Html.ValidationMessageFor(d => d.NombreAlumno, null, new { @class = "red" })
			</div>
			<div>
				@Html.LabelFor(d => d.ApellidoAlumno)
				@Html.TextBoxFor(d => d.ApellidoAlumno, "", new { @class = "form-control" })
				@Html.ValidationMessageFor(d => d.ApellidoAlumno, null, new { @class = "red" })
			</div>
			<div>
				@Html.LabelFor(d => d.CalificacionAlumno)
				@Html.TextBoxFor(d => d.CalificacionAlumno, "", new { @class = "form-control" })
				@Html.ValidationMessageFor(d => d.CalificacionAlumno, null, new { @class = "red" })
			</div>
			<div>
				@Html.LabelFor(d => d.Fecha)<br />
				@Html.EditorFor(d => d.Fecha, "", new { @class = "form-control" })<br />
				@Html.ValidationMessageFor(d => d.Fecha, null, new { @class = "red" })
			</div>
			<br />
			<div style="text-align:right;">
				<input value="Guardar" class="btn btn-primary" type="submit" />
			</div>
		</div>

	</div>
}
